<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.acolhe.app.fragments.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            android:backgroundTint="@color/secondary_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary_color"
                android:backgroundTint="@color/secondary_color"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/calendar_vector" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/paytone_one"
                        android:text="{{dia}}"
                        android:textColor="#f5f5f5"
                        android:textFontWeight="700" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:src="@drawable/loginho" />

                        <TextView
                            android:id="@+id/valorOfensivaHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/paytone_one"
                            android:text="21"
                            android:textColor="#f5f5f5"
                            android:textFontWeight="900" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:src="@drawable/medal" />

                        <TextView
                            android:id="@+id/valorSaldoHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/paytone_one"
                            android:text="400"
                            android:textColor="#f5f5f5"
                            android:textFontWeight="900" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="0"
                        android:src="@drawable/fotoperfil" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/paytone_one"
                            android:text="Oi, {{Nome}}!"
                            android:textColor="#f5f5f5"
                            android:textFontWeight="900"
                            android:textSize="23dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:visibility="gone"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:src="@drawable/plus_member_medal" />

                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/smiley_face" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/paytone_one"
                                android:text="{{Humor}}"
                                android:textColor="#f5f5f5"
                                android:textFontWeight="900"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="27dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/paytone_one"
                        android:text="Frase do dia"
                        android:textColor="@color/secondary_color"
                        android:textFontWeight="900"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:src="@drawable/up_aspas" />


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/paytone_one"
                        android:text="Frase bonita está sendo escrita, seja feliz!"
                        android:textAlignment="center"
                        android:textColor="@color/secondary_color"
                        android:textFontWeight="900"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:src="@drawable/down_aspas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="27dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/paytone_one"
                            android:text="Seu Humor"
                            android:textColor="@color/secondary_color"
                            android:textFontWeight="900"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Ver tudo"
                            android:textAlignment="textEnd"
                            android:textColor="#B3004C6D"
                            android:textSize="11sp"
                            tools:ignore="RtlCompat" />

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@drawable/setaclara" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordaarredondadahome"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/bordaarredondadacinza"
                            android:orientation="vertical"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="6dp">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/paytone_one"
                                android:text="SEP"
                                android:textAlignment="center"
                                android:textColor="#B9B6B2"
                                android:textFontWeight="900"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/paytone_one"
                                android:text="11"
                                android:textAlignment="center"
                                android:textColor="#5E4635"
                                android:textFontWeight="900"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/paytone_one"
                            android:text="{{Humor do dia}}"
                            android:textColor="#5E4635"
                            android:textFontWeight="900"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/big_smiley" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/paytone_one"
                            android:text="Clinicas"
                            android:textColor="@color/secondary_color"
                            android:textFontWeight="900"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Ver tudo"
                            android:textAlignment="textEnd"
                            android:textColor="#B3004C6D"
                            android:textSize="11sp"
                            tools:ignore="RtlCompat" />

                        <ImageView
                            android:id="@+id/imageView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@drawable/setaclara" />
                    </LinearLayout>

                    <com.github.islamkhsh.CardSliderViewPager
                        android:id="@+id/home_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        app:cardSlider_otherPagesWidth="50dp"
                        app:cardSlider_pageMargin="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/paytone_one"
                            android:text="Meditações"
                            android:textColor="@color/secondary_color"
                            android:textFontWeight="900"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Ver tudo"
                            android:textAlignment="textEnd"
                            android:textColor="#B3004C6D"
                            android:textSize="11sp"
                            tools:ignore="RtlCompat" />

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@drawable/setaclara" />
                    </LinearLayout>

                    <com.github.islamkhsh.CardSliderViewPager
                        android:id="@+id/home_viewPager2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        app:cardSlider_otherPagesWidth="50dp"
                        app:cardSlider_pageMargin="0dp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
